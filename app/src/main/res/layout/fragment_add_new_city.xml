<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".presentation.fragments.AddNewCityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/city_name_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_city_name"
            android:importantForAutofill="no"
            android:inputType="text" />

        <Button
            android:id="@+id/button_insert_new_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_insert_new_city" />

    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>